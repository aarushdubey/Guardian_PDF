# GuardianPDF Environment Variables

# NVIDIA AI API Key
NVIDIA_API_KEY=your_nvidia_api_key_here

# LLM Configuration
LLM_PROVIDER=nvidia  # Options: nvidia, ollama
NVIDIA_MODEL=meta/llama3-70b-instruct  # NVIDIA model to use

# Optional: Ollama (if using local)
# OLLAMA_HOST=http://localhost:11434
# OLLAMA_MODEL=llama3.2:latest

# ChromaDB
CHROMA_PERSIST_DIR=./chroma_db

# Embedding Model
EMBEDDING_MODEL=all-MiniLM-L6-v2

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
